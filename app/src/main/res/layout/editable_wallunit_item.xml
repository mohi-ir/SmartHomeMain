<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_wallunit_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textNoSuggestions"
        android:layout_toLeftOf="@+id/button_wallunit_item"
        android:layout_toStartOf="@+id/button_wallunit_item"
        android:maxLength="20"
        android:textSize="@dimen/abc_text_size_large_material"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/channels"
        android:id="@+id/button_wallunit_item"
        android:layout_alignBottom="@+id/editText_wallunit_item"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>